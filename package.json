{
  "name": "mon-ide-claude",
  "version": "1.0.1",
  "description": "IDE local propulsÃ© par Claude AI",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "react-start": "react-scripts start",
    "electron-start": "electron .",
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron-start\"",
    "lint": "npx eslint \"src/**\" --ext .js,.jsx",
    "lint:fix": "npx eslint \"src/**\" --ext .js,.jsx --fix",
    "test": "react-scripts test --env=jsdom --watchAll=false --passWithNoTests",
    "build": "react-scripts build",
    "package": "npm run clean:dist && npm run build && electron-builder build --win",
    "clean:dist": "node -e require('fs').rmSync('dist',{recursive:true,force:true})",
    "package:win": "npm run clean:dist && npm run build && electron-builder --win --x64",
    "package:win:dir": "npm run clean:dist && npm run build && electron-builder --win --x64 --dir"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "build": {
    "appId": "com.monide.claude",
    "productName": "Mon IDE Claude",
    "forceCodeSigning": false,
    "extraMetadata": {
      "main": "main.js"
    },
    "directories": {
      "output": "dist",
      "buildResources": "public"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico",
      "sign": null,
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Mon IDE Claude"
    }
  },
  "keywords": [],
  "author": "Moi",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "png-to-ico": "^2.1.8",
    "wait-on": "^8.0.2",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@monaco-editor/react": "^4.7.0",
    "node-pty": "^1.0.0",
    "openai": "^6.22.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-scripts": "5.0.1",
    "react-syntax-highlighter": "^15.6.1",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  }
}
